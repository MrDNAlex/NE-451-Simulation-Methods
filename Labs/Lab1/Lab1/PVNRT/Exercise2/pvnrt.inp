# Define Variables
variable temp equal 300
variable rdf_bins equal 200
variable sim_run equal 2

# Define the Units
units real
atom_style atomic

# Create a Simulation Box
read_data Ar.data

# Assign the Group to Argon and Assign it's mass
group Ar type 1
mass 1 39.948

# Define the Potential of the Simulation
pair_style lj/cut 10.0
pair_coeff 1 1 1.0 1.0

# Set the initial velocity
velocity all create ${temp} 54343

# Define the Thermodynamics Output
thermo 100
thermo_style custom step temp press vol etotal

# Compute the RDF
compute RDF all rdf ${rdf_bins}

# Run the Simulation
fix integrate1 all nvt temp ${temp} ${temp} 5.0
fix rdf_pre all ave/time 100 10 1000 c_RDF[*] file RDF_Pre_Sim${sim_run}.data mode vector
timestep 0.005

# Run the Simulation
run 20000
unfix integrate1

# Output the RDF Data to the Dump Folder
fix integrate2 all nvt temp ${temp} ${temp} 5.0

# Dump the files for the positions of the Atoms every 100 Frames
dump            myDump1 all custom 100 Dumpfiles/_*.dump id type element x y z vx vy vz fx fy fz
dump_modify 	myDump1 element Ar

# Run the Simulation
run 500000
unfix integrate2